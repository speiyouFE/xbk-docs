@require './config'

$mobileSidebarWidth = $--sidebar-width

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 1rem
    width $mobileSidebarWidth
  .page
    padding-left $mobileSidebarWidth
  .table-of-contents
    display none
// wide mobile
@media (max-width: $MQMobile)
  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0
  .table-of-contents
    display none
// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.6rem
  {$contentClass}
    div[class*="language-"]
      margin 0rem -1rem
      border-radius 0
  .table-of-contents
    display none
